{
  "expo": {
    "name": "Metro Link Tracker",
    "slug": "metrobustracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#fbbf24"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.metrobustracker",
      "config": {
        "googleMapsApiKey": "AIzaSyAtz31ET-f9agUbnJuR-tR35Gk8GdsTRic"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow Metro Link Tracker to use your location to show nearby buses, stops, and navigation while the app is in use.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Metro Link Tracker to access your location in the background so your bus can be tracked in real time even when the app is minimized.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#fbbf24"
      },
      "package": "com.yourcompany.metrobustracker",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "INTERNET",
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAtz31ET-f9agUbnJuR-tR35Gk8GdsTRic"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Metro Link Tracker to use your location to show nearby buses and stops."
        }
      ],
      "expo-font",
      "expo-notifications"
    ],
    "extra": {
      "GOOGLE_MAPS_API_KEY": "AIzaSyAtz31ET-f9agUbnJuR-tR35Gk8GdsTRic",
      "eas": {
        "projectId": "98656936-607c-4250-9f54-f55cd56958e8"
      }
    }
  }
}
